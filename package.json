{
  "name": "@aragon/osx-plugin-template-hardhat",
  "license": "AGPL-3.0-or-later",
  "private": true,
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.44.0",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "prettier": "^2.8.8",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^3.6.2",
    "solhint-plugin-prettier": "^0.0.5",
    "typescript": "5.0.4"
  },
  "scripts": {
    "prettier:check": "prettier --check \"**/*.{js,json,md,sol,ts,yml}\"",
    "prettier:write": "prettier --write \"**/*.{js,json,md,sol,ts,yml}\"",
    "lint:contracts:sol": "solhint --max-warnings 0 \"packages/contracts/src/**/*.sol\"",
    "lint:contracts:ts": "eslint --ext .js,.ts ./packages/contracts/",
    "lint:contracts-ethers:ts": "eslint --ext .js,.ts ./packages/contracts-ethers/",
    "lint:js-client:ts": "eslint --ext .js,.ts ./packages/js-client/",
    "lint:subgraph:ts": "eslint --ext .js,.ts ./packages/subgraph/",
    "lint": "yarn run lint:contracts:sol; yarn run lint:contracts:ts; yarn run lint:contracts-ethers:ts; yarn run lint:js-client:ts; yarn run lint:subgraph:ts"
  }
}
